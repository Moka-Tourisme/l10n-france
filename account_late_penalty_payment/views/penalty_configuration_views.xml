<odoo>
    <record id="view_penalty_configuration_form" model="ir.ui.view">
        <field name="name">penalty.configuration.form</field>
        <field name="model">penalty.configuration</field>
        <field name="arch" type="xml">
            <form string="Late payment interest rules">
                <sheet>
                    <group>
                        <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>
                        <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/>
                        <field name="legal_rate" widget="percentage"/>
                        <field name="coefficient" />
                        <field name="fixed_fee" widget="monetary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_penalty_configuration_tree" model="ir.ui.view">
        <field name="name">penalty.configuration.tree</field>
        <field name="model">penalty.configuration</field>
        <field name="arch" type="xml">
            <tree string="Configurations des Pénalités">
                <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>
                <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/>
                <field name="legal_rate" widget="percentage"/>
                <field name="coefficient"/>
                <field name="fixed_fee" widget="monetary"/>
            </tree>
        </field>
    </record>

    <record id="action_penalty_configuration" model="ir.actions.act_window">
        <field name="name">Configurations des Pénalités</field>
        <field name="res_model">penalty.configuration</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(6, 0, [ref('account.group_account_invoice')])]"/>
    </record>

    <menuitem id="menu_penalty_configuration" 
    name="Late payment interest"
    action="action_penalty_configuration" 
    parent="account.account_management_menu"
    groups="account.group_account_invoice"/>
</odoo>
